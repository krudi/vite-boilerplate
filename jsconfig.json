{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		],
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"./*"
			],
			"@/*": [
				"./*"
			],
			"~~/*": [
				"./*"
			],
			"@@/*": [
				"./*"
			]
		}
	},
	"exclude": [
		"node_modules",
		".nuxt",
		"dist"
	]
}
